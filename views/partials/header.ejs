    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous">
    </script>
    <!-- Stylesheets -->
    <link rel="stylesheet" href="/stylesheets/darkTheme.css">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <link rel="stylesheet" href="/stylesheets/navbar.css">
</head>

<body onload="loadTheme()" class="">
    <nav class="navbar fixed-top navbar-expand-lg text-nowrap navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="/index">Anidex</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="top/anime/" id="navbardrop" data-toggle="dropdown">
                            Anime
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="/top/anime/">Top Anime</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/genre/anime">Anime Genres</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/schedule">Weekly Schedule</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/season/archive">Season Archive</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="/manga" id="navbardrop" data-toggle="dropdown">
                            Manga
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="/top/manga">Top Manga</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/genre/manga">Manga Genres</a>
                        </div>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/season/2020/summer">Seasonal Anime<span
                                class="sr-only">(current)</span></a>
                    </li>
                </ul>
                <div class="custom-control custom-switch"  style="margin-right: 15px;">
                    <input type="checkbox" class="custom-control-input" id="customSwitch1" onclick="switchTheme2()">
                    <label class="custom-control-label" for="customSwitch1" id="switchLabel">Switch Theme</label>
                </div>
                <form class="form-inline my-2 my-lg-0" action="/search" method="GET" style="margin-right: 15px;">
                    <select class="form-control" name="type">
                        <option selected value="anime">Anime</option>
                        <option value="manga">Manga</option>
                        <option value="people">Person</option>
                    </select>
                    <input class="form-control" type="text" placeholder="Search Anime & Manga Titles" name="search"  style="margin-right: 8px;" minlength="4" required>
                    <button class="btn btn-info" type="submit" style="margin-right: 5px;">Search</button>
                </form>
                <ul class="nav navbar-nav navbar-right">
                    <% if(!currentUser){ %>
                    <li class="nav-item active">
                        <a class="nav-link" href="/login">Login <span
                                class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/register">Register<span class="sr-only">(current)</span></a>
                    </li>
                    <% } else { %>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="/manga" id="navbardrop" data-toggle="dropdown">
                            Signed In As <%= currentUser.username %>
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="/user/<%= currentUser.username %>/profile">Profile</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/user/<%= currentUser.username %>/animelist">Anime List</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/user/<%= currentUser.username %>/mangalist">Manga List</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/logout">Logout</a>
                        </div>
                    </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>